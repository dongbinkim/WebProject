.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') 
        i.fa.fa-home
    #navbar.collapse.navbar-collapse
      ul.nav.navbar-nav
        if(currentUser)
          li
            div.dropdown
              .btn.btn-default.dropdown-toggle(id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true") Survey
              span.caret
              ul.dropdown-menu(role="menu" aria-labelledby="dropdownMenu1")
                li(role="presentation")
                  a(role="menuitem" tabindex="-1" href="/surveys/new") New Survey
                  a(role="menuitem" tabindex="-1" href="/surveys/list") Survey List
        
      ul.nav.navbar-nav.navbar-right
        if (currentUser) 
          li
            a(href='/users/#{currentUser._id}') Profile
          li
            a(href='/users') User List
          li
            a(href='/signout') Signout
        else
          li
            a(href='/signin') Signin
          li
            a(href='/users/new') Signup
    
    
      
