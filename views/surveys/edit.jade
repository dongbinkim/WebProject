extends ../layout

block content
  .container

    h1.page-header 글수정

    form(action = "/surveys/#{survey.id}?_method=PUT")
        label(for='title') Title
        input.form-control(type='text', id='title', name='title', placeholder='title', value=survey.title)
      .form-group
        label(for='content') Content
        textarea.form-control(id='content', rows='10', name='content', placeholder='content here')= survey.content

      div.form-actions
        a.btn.btn-default(href='javascript:window.history.back();') 뒤로 
        | 
        button.btn.btn-primary(type='submit') 완료
